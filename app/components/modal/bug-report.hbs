<div class="modal-inner modal-size-medium">
    <div class="modal-inner-header modal-header-default">
        <div class="modal-header-title-container">
            <FaIcon @icon="bug" class="modal-header-icon" />
            <h4 class="modal-header-title">{{localize "modal/report-bug/title"}}</h4>
        </div>
        <button type="button" class="modal-button-close" {{on "click" this.modalService.hide}}>
            <FaIcon @icon="xmark" />
        </button>
    </div>
    <div class="modal-inner-content">
        <form id="modal-form" {{on "submit" this.onSubmit}} target="frame">
            <Interactable::text-area @label={{localize "modal/report-bug/description-01" }}
                @subtitle={{localize "modal/report-bug/description-02" }} @focus={{true}} @required={{true}}
                @changeset={{this.changeset}} @key="description" />
            <Interactable::text-area @label={{localize "modal/report-bug/reproduction-01" }} @required={{true}}
                @subtitle={{localize "modal/report-bug/reproduction-02" }} @changeset={{this.changeset}}
                @key="reproduction" />
            <Interactable::inputfield @label={{localize "modal/report-bug/email-01" }} @changeset={{this.changeset}}
                @key="email" @subtitle={{localize "modal/report-bug/email-02" }} @type="email" />
            <Interactable::toggle @label={{localize "modal/report-bug/include-log-01" }} @changeset={{this.changeset}}
                @key="includeLog" @subtitle={{localize "modal/report-bug/include-log-02" }} />
        </form>
    </div>
    <div class="modal-inner-footer">
        <button id="modal-button-footer-yes" type="submit" class="button" {{on "click" this.onSubmit}}>
            {{localize "modal/report-bug/send"}}
        </button>
    </div>
</div>