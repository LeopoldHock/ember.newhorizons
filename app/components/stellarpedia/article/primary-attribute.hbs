<h2 class="text-{{@titleAlignment}}">{{this.header}}</h2>
<div class="separator" />
<Stellarpedia::Text @text={{stellarpedia/sp-prepare this.text}} />
<Stellarpedia::Text @style="subtitle" @title={{localize "stellarpedia/article/primary-attribute/factor" }}
    @text={{this.factor}} />
{{#if this.usedInSecondaryAttributes}}
<Stellarpedia::Text @style="subtitle"
    @title={{localize "stellarpedia/article/primary-attribute/used-in-secondary-attributes" }}
    @text={{stellarpedia/sp-prepare this.usedInSecondaryAttributes}} />
{{/if}}
<Stellarpedia::Text @style="subtitle" @title={{localize "stellarpedia/article/primary-attribute/used-in-skills" }}
    @text={{stellarpedia/sp-prepare this.usedInSkills}} />