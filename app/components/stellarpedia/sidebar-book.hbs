<button id="sidebar-button-{{@book.id}}" type="button" class="sidebar-collapsible" {{on "click" this.onClick}}>
    <FaIcon @icon={{@book.faIcon}} @size={{this.manager.constants.sidebarIconSize}}
        class="margin-sides-medium fg-teal-neon" />
    <p class="margin-vertical-auto">{{localize (concat "stellarpedia/book/" @book.id)}}</p>
</button>
<div id="sidebar-button-{{@book.id}}-content"
    class="sidebar-collapsible-content {{if this.expanded 'sidebar-collapsible-content-expanded' }}">
    {{yield}}
</div>