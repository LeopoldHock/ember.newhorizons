<div class="v-box justify-content-center overflow-hidden">
    <h3 class="fg-white text-center">{{localize "Route/sign-up/title"}}</h3>
    <div class="panel panel-small">
        <form class="align-items-center" {{on "submit" this.onSubmit}}>
            <div class="interactable-size-larger">
                <Interactable::inputfield class="paddingTopBottom10px" @label={{localize "Route/sign-up/email-label" }}
                    @required={{true}} @placeholder={{localize "Route/sign-up/email-placeholder" }} @maxLength="255"
                    @pattern={{this.manager.pattern.email}} @changeset={{this.changeset}} @key="email" @type="email"
                    @size="larger" />
                <div class="panel-spacer" />
                <Interactable::inputfield class="paddingTopBottom10px" @label={{localize "Route/sign-up/username-label"
                    }} @required={{true}} @placeholder={{localize "Route/sign-up/username-placeholder" }} @minLength="4"
                    @maxLength="255" @changeset={{this.changeset}} @key="username" @type="text" @size="larger" />
                <Interactable::inputfield class="paddingTopBottom10px" @label={{localize "Route/sign-up/password-label"
                    }} @required={{true}} @placeholder={{localize "Route/sign-up/password-placeholder" }}
                    @changeset={{this.changeset}} @key="passwordRaw" @type="password" @minLength="8" @maxLength="40"
                    @pattern={{this.manager.pattern.password}} @eventListeners={{this.passwordEventListeners}}
                    @size="larger" />
                <div class="h-box justify-content-center paddingTopBottom10px">
                    <div id="password-sec-bar-1" class="h-box-item password-sec-level-bar" />
                    <div id="password-sec-bar-2" class="h-box-item password-sec-level-bar" />
                    <div id="password-sec-bar-3" class="h-box-item password-sec-level-bar" />
                    <div id="password-sec-bar-4" class="h-box-item password-sec-level-bar" />
                </div>
            </div>
            <div class="min-height-small">
                <p id="password-requirements-text" class="text-center interactable-subtitle full-width display-none">
                    {{localize
                    "Route/sign-up/password-req-text-01"}}
                    <br />{{localize "Route/sign-up/password-req-text-02"}}
                    <br />{{localize "Route/sign-up/password-req-text-03"}}
                </p>
            </div>
            <p class="text-center paddingTopBottom10px">{{localize "Route/sign-up/submit-confirm-text"}}</p>
            <Interactable::button @type="submit" @busy={{this.submitIsBusy}} @label={{localize "Route/sign-up/sign-up"
                }} @size="large" />
        </form>
    </div>
</div>